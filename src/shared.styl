$bg = #f2f2f2
$gray = #828282
$green = #6aab2a

.header 
	.icon.sidebar 
		font-size: 14px
		cursor pointer


.unedited 
	background #f7f7f7
	height 80px
	padding 0.5em
	margin-bottom 0.5em
	overflow hidden

.unedited + textarea
	  display none

.enable_editor
	position relative !important
	top -65px !important
	left 50% !important
	margin-left -75px !important
	width 150px !important
	background #f2f2f2 !important
	border 1px solid #CCC !important


.hide 
	display none

.text-right 
	text-align right

.text-left 
	text-align left

.text-center 
	text-align center

.text-justify 
	text-align justify

.mb1
	margin-bottom 1em !important

.fm-modal
	z-index 10011
	width 80%
	height 80%
	top 10%
	left 10%
	border 0
	position fixed
	box-shadow 0px 1px 5px 0px #656565